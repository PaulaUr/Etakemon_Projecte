<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.upc.eetac.dsa.etakemon_projecte.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Usuario"
        android:ems="10"
        android:id="@+id/Usuario"
        android:layout_marginTop="44dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/contraseña"
        android:hint="Password"
        android:layout_marginTop="93dp"
        android:layout_below="@+id/Usuario"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JUGAR"
        android:id="@+id/button"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/contraseña"
        android:layout_alignLeft="@+id/contraseña"
        android:layout_alignStart="@+id/contraseña"
        android:layout_alignRight="@+id/contraseña"
        android:layout_alignEnd="@+id/contraseña" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Has olvidado tu Usuario?"
        android:id="@+id/textView"
        android:layout_below="@+id/Usuario"
        android:layout_alignLeft="@+id/Usuario"
        android:layout_alignStart="@+id/Usuario"
        android:textSize="15dp"
        android:onClick="recuperar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Has olvidado tu contraseña?"
        android:id="@+id/textView2"
        android:layout_below="@+id/contraseña"
        android:layout_alignLeft="@+id/contraseña"
        android:layout_alignStart="@+id/contraseña"
        android:textSize="15dp"
        android:onClick="recuperar" />

</RelativeLayout>
